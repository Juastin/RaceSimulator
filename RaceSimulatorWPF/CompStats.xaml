<Window x:Class="RaceSimulatorWPF.CompStats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceSimulatorWPF"
        mc:Ignorable="d"
        Title="CompStats" Height="450" Width="800">
    <Window.DataContext>
        <local:CompStatsDataContext/>
    </Window.DataContext>
    <Grid>
        <Label Content="Remaining tracks" HorizontalAlignment="Left" Margin="0,1,0,0" VerticalAlignment="Top" Width="302"/>
        <ListView Margin="0,32,498,0" ItemsSource="{Binding TrackList}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Content="Drivers in competition" HorizontalAlignment="Left" Margin="307,1,0,0" VerticalAlignment="Top" Width="302"/>
        <ListView Margin="307,32,191,0" ItemsSource="{Binding DriverList, Mode=OneWay}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
